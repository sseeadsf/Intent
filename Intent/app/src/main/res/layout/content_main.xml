<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.admin.intent.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review"
        android:text="phuong trinh bac 2 co dang a*x^2+b*x+c"
        android:textSize="@dimen/textSize"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhap a: "
        android:id="@+id/a"
        android:layout_below="@+id/review"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/value_a"
        android:textSize="@dimen/textSize"
        android:layout_toRightOf="@+id/a"
        android:layout_below="@+id/review"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b"
        android:text="Nhap b: "
        android:layout_below="@+id/a"
        android:layout_marginTop="@dimen/textSize"
        android:layout_alignBottom="@+id/value_b"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/value_b"
        android:layout_below="@+id/value_a"
        android:layout_toRightOf="@+id/b"

        android:textSize="@dimen/textSize"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c"
        android:text="Nhap c: "
        android:layout_below="@+id/b"
        android:layout_marginTop="@dimen/textSize"
        android:layout_alignBottom="@+id/value_c"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value_b"
        android:id="@+id/value_c"
        android:layout_toRightOf="@+id/c"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value_c"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/textSize"
        android:text="Calculator"
        android:onClick="btn_Cal"/>

</RelativeLayout>
